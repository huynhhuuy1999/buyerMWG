{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/store/*": ["store/*"],
			"@/styles/*": ["styles/*"],
			"@/components/*": ["components/*"],
			"@/utils/*": ["utils/*"],
			"@/layouts/*": ["layouts/*"],
			"@/middleware/*": ["middleware/*"],
			"@/models/*": ["models/*"],
			"@/hooks/*": ["hooks/*"],
			"@/modules/*": ["modules/*"],
			"@/enums/*": ["enums/*"],
			"@/configs/*": ["configs/*"],
			"@/constants/*": ["constants/*"],
			"@/services/*": ["services/*"],
			"@/HOCs/*": ["HOCs/*"],
			"@/graphql/*": ["@/graphql/*"]
		},
		"target": "esnext",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"noImplicitReturns": false,
		"noImplicitAny": true,
		"importHelpers": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"sourceMap": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"noUnusedLocals": false,
		"allowSyntheticDefaultImports": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"i18n.config.js",
		"pages/_error.tsx",
		"server.js"
	],
	"exclude": ["node_modules"]
}
